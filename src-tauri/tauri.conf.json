{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../src/dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "XEID",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "xeid.app",
      "targets": "all",
      "category": "DeveloperTool",
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "wix": {}
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "macOS": {
        "minimumSystemVersion": "10.13",
        "license": "../LICENSE"
      },
      "deb": {
        "files": {}
      },
      "copyright": "Copyright (c) 2023 Alvaro Tinoco",
      "shortDescription": "eXecution Environment IDE"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlDRjY2QjY5RERGMTIzNzIKUldSeUkvSGRhV3YybkltdERpY2ZzMlhQdi9XZXpodFNWa3ZFaDFUTCtRc2JEbE9kTWVWUTZtc0EK",
      "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://github.com/mrmarble/xeid/releases/latest/download/latest.json"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "XEID",
        "width": 1000,
        "height": 600,
        "visible": false,
        "decorations": false
      }
    ]
  }
}